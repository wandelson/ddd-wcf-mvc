@model AppService.ViewModels.TelefoneViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Tem certeza que deseja excluir este telefone?</h4>
</div>

<div class="modal-body">
    <div class="form-horizontal">

        @Html.Partial("_DadosTelefone")

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="modal-footer">
                <input class="btn btn-danger" type="submit" value="Sim" />
                <input type="button" class="btn btn-success" data-dismiss="modal" value="Não"/>
            </div>
        }
    </div>
</div>
